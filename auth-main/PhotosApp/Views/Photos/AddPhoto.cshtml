@model AddPhotoModel
@{
    ViewData["Title"] = "Добавить фото";
}

<form asp-action="AddPhoto" method="post" role="form" enctype="multipart/form-data">
    <div class="row h-100 justify-content-center">
        <div class="leftMargin topMargin">
            <h2>Добавить фото</h2>
            <div class="form-group">
                <div><label asp-for="Title">Подпись к фото</label></div>
                <input asp-for="Title" type="text"/>
            </div>

            <div class="form-group">
                <div><label asp-for="Files">Файл с фото</label></div>
                <input asp-for="Files" type="file" accept=".jpg,.jpeg"/>
            </div>

            <div class="form-group">
                <div>
                    <input type="submit" class="btn btn-primary" value="Добавить фото"/>
                </div>
            </div>
        </div>
    </div>
</form>
